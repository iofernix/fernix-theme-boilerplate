{
    "name": "fernix/wordpress-theme",
    "description": "",
    "type": "project",
    "keywords": [
        "wordpress",
        "theme"
    ],
    "homepage": "https://github.com/iofernix/wordpress-theme",
    "license": "MIT",
    "authors": [
        {
            "name": "Fernando Vargas",
            "email": "fernando.vargas@fernix.io"
        }
    ],
    "require-dev": {
        "fernix/wordpress-cli": "dev-develop",
        "squizlabs/php_codesniffer": "^3.5",
        "wp-coding-standards/wpcs": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Theme_Namespace\\": "src/"
        }
    },
    "prefer-stable": true,
    "config": {
        "vendor-dir": "src/vendor"
    },
    "scripts": {
        "post-create-project-cmd": [
            "Fernix\\WordPress\\Theme\\Bootstrap::postCreateProject",
            "composer dump-autoload"
        ],
        "post-install-cmd": [
            "./src/vendor/bin/phpcs --config-set installed_paths ../../wp-coding-standards/wpcs"
        ],
        "post-update-cmd": [
            "./src/vendor/bin/phpcs --config-set installed_paths ../../wp-coding-standards/wpcs"
        ],
        "wp-install": [
            "Fernix\\WordPress\\WP::install"
        ]
    }
}
